<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
     <servlet>
        <servlet-name>CredentialServlet</servlet-name>
        <servlet-class>com.kingshuk.controller.CredentialServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CredentialServlet</servlet-name>
        <url-pattern>*.html</url-pattern>
    </servlet-mapping>
     <error-page>
        <exception-type>java.lang.Throwable
            </exception-type>
        <location>
                /pages/errorPage1.jsp
                </location>
    </error-page>
    <session-config>
        <session-timeout>
           60
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/pages/credential_index.html</welcome-file>
    </welcome-file-list>

</web-app>
